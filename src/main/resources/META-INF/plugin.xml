<idea-plugin>
    <id>com.scaffold.plugin</id>
    <name>Scaffold Clean Architecture Plugin</name>
    <vendor email="ing.javier.sanchez.b@gmail.com">JavieSanchezB</vendor>

    <description>
        Plugin para ejecutar tareas del Scaffold Clean Architecture de Bancolombia desde IntelliJ.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Scaffold"
                    anchor="left"
                    factoryClass="com.github.javiesanchezb.scaffoldbancolombiaplugin.toolWindow.ScaffoldToolWindowFactory"
                    icon="/icons/Symbol.png"
                    secondary="false"
        />
    </extensions>
</idea-plugin>

